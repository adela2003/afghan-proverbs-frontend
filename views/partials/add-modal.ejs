<!-- ADD Modal -->
<div
  class="modal fade"
  id="addProverbModal"
  tabindex="-1"
  aria-labelledby="addProverbModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" style="max-width: 440px">
    <form
      action="/add"
      method="POST"
      class="modal-content rounded-4 border-0 shadow-sm p-2"
    >
      <div class="modal-header border-0 py-2">
        <h6
          class="modal-title text-center w-100 fw-bold text-gradient mb-0"
          id="addProverbModalLabel"
        >
          افزودن ضرب‌المثل
        </h6>
        <button
          type="button"
          class="btn-close position-absolute end-0 me-3 mt-2"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body px-3 pt-1 pb-2">
        <div class="form-group mb-2">
          <label class="form-label small mb-1">متن دری:</label>
          <input
            type="text"
            name="textDari"
            class="form-control form-control-sm"
            required
          />
        </div>
        <div class="form-group mb-2">
          <label class="form-label small mb-1">متن پشتو:</label>
          <input
            type="text"
            name="textPashto"
            class="form-control form-control-sm"
            required
          />
        </div>
        <div class="form-group mb-2">
          <label class="form-label small mb-1">ترجمه انگلیسی:</label>
          <input
            type="text"
            name="translationEn"
            class="form-control form-control-sm"
            required
          />
        </div>
        <div class="form-group mb-2">
          <label class="form-label small mb-1">معنی:</label>
          <textarea
            name="meaning"
            class="form-control form-control-sm"
            rows="1"
          ></textarea>
        </div>
        <div class="form-group mb-2">
          <label class="form-label small mb-1">دسته‌بندی:</label>
          <input
            type="text"
            name="category"
            class="form-control form-control-sm"
            required
          />
        </div>
      </div>
      <div class="modal-footer justify-content-between border-0 px-3 py-2">
        <button
          type="button"
          class="btn btn-sm btn-secondary"
          data-bs-dismiss="modal"
        >
          لغو
        </button>
        <button
          type="submit"
          class="btn btn-sm custom-gradient-btn text-white fw-bold"
        >
          ذخیره
        </button>
      </div>
    </form>
  </div>
</div>
